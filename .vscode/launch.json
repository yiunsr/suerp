{
  // IntelliSense를 사용하여 가능한 특성에 대해 알아보세요.
  // 기존 특성에 대한 설명을 보려면 가리킵니다.
  // 자세한 내용을 보려면 https://go.microsoft.com/fwlink/?linkid=830387을(를) 방문하세요.
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "env": {
        "FASTAPI_CONFIG": "development",
        "LC_ALL": "ko_KR.utf8",
        "LANG": "ko_KR.utf8",
      },
      "justMyCode": false,
      "cwd": "${workspaceFolder}" //  "Current File" 
    },
    {
      "name": "dev server",
      "type": "python",
      "request": "launch",
      "program": "main_server.py",
      "console": "integratedTerminal",
      "env": {
        "FASTAPI_CONFIG": "development"
      },
      "justMyCode": false
    },
    {
      "name": "dev cli",
      "type": "python",
      "request": "launch",
      "program": "main_cli.py",
      "console": "integratedTerminal",
      "env": {
        "FASTAPI_CONFIG": "development"
      },
      "justMyCode": false,
      "args":["init-test-db"],
    },
    {
      "name": "dev cli init_test_user",
      "type": "python",
      "request": "launch",
      "program": "main_cli.py",
      "console": "integratedTerminal",
      "args": ["init-test-user"],
      "env": {
        "FASTAPI_CONFIG": "development"
      },
      "justMyCode": false
    },
    {
      "name": "Python: Attach",
      "type": "python",
      "request": "attach",
      "port": 5678,
      "host": "localhost",
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}", // Maps C:\Users\user1\project1
          "remoteRoot": "." // To current working directory ~/project1
        }
      ],
      "justMyCode": false
    }
  ]
}
